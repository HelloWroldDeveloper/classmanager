                <action android:name="com.chen.MainActivity.ACTION_CLASS_MEMBERS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.chen.activity.LeaveApplicationActivity">
            <intent-filter>
                <action android:name="com.chen.MainActivity.ACTION_CLASS_LEAVE_APPLICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.chen.activity.LeaveApplyContentActivity">
            <intent-filter>
                <action android:name="com.chen.MainActivity.ACTION_CLASS_LEAVE_APPLICATION_CONTENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.chen.activity.LeaveApplyAddActivity">
            <intent-filter>
                <action android:name="com.chen.MainActivity.ACTION_CLASS_ADD_LEAVE_APPLICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
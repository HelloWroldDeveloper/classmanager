<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_sign1"
            android:layout_marginLeft="20dp"
            android:id="@+id/class_sign_back"
            />
        <TextView
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_sign2"
            android:layout_marginLeft="20dp"
            android:id="@+id/class_sign_already_sign"
            android:textColor="	#FF0000"
            />
        <TextView
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_sign3"
            android:layout_marginLeft="20dp"
            android:id="@+id/class_sign_not_sign"
            />
    </LinearLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="#4169E1"
        android:layout_marginTop="8dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="当前为空白..."
            android:id="@+id/class_sign_person_list"
            />
    </ScrollView>
    <TextView
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#6A5ACD"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:text="签到地点："
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:maxLength="8"
            android:ellipsize="end"
            android:id="@+id/class_sign_place"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:text="发起人："
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:maxLength="9"
            android:ellipsize="end"
            android:id="@+id/class_sign_person"
            />
    </LinearLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:text="签到"
        android:id="@+id/class_sign_btn"
        android:background="@drawable/btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center"
        />
</LinearLayout>
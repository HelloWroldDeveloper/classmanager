<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/vote_item"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D4F2E7">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="标题："
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:maxLength="14"
                android:ellipsize="end"
                android:id="@+id/vote_item_title"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E1FFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_toLeftOf="@id/vote_item_t1"
                android:id="@+id/vote_item_msg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:id="@+id/vote_item_t1"
                android:layout_marginRight="10dp"
                android:text="发起"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0FFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vote_item_status"
                android:layout_toLeftOf="@id/vote_item_deadline"
                android:layout_marginRight="15dp"
                android:textSize="20sp"
                android:text="未投"
                android:textColor="#FF0000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_toLeftOf="@id/vote_item_t2"
                android:id="@+id/vote_item_deadline"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:id="@+id/vote_item_t2"
                android:layout_marginRight="10dp"
                android:text="截止"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#000000"
        />
</LinearLayout>
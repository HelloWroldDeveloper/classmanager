<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.chen.view.ActionbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:text="---投票选项"
            android:layout_marginLeft="15dp"
            />
        <Button
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:textSize="25sp"
            android:layout_toLeftOf="@id/vote_add_delete"
            android:id="@+id/vote_add_add"
            android:background="@drawable/add2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
        <Button
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:textSize="25sp"
            android:layout_alignParentRight="true"
            android:id="@+id/vote_add_delete"
            android:background="@drawable/delete"
            style="?android:attr/borderlessButtonStyle"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#696969"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:id="@+id/vote_add_fragment"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#696969"
        />
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="---投票标题"
                />
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="160dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:textSize="20sp"
                android:id="@+id/vote_add_title"
                />
        </LinearLayout>
        <Button
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:textSize="25sp"
            android:layout_alignParentRight="true"
            android:id="@+id/vote_add_ok"
            android:background="@drawable/next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
</LinearLayout>
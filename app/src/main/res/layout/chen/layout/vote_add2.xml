<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.chen.view.ActionbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:text="---设置截止日期"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.chen.view.TimeNumberPicker
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/vote_add2_date"
            android:layout_marginLeft="20dp"
            />
        <com.chen.view.TimeNumberPicker
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/vote_add2_hour"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/mark"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
        <com.chen.view.TimeNumberPicker
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/vote_add2_minute"
            />
    </LinearLayout>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:text="---设置最大投票项数"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="0表示无限制，1表示单选"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="1以上表示有限制的多选"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        >
        <com.chen.view.TimeNumberPicker
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/vote_add2_num"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:textSize="25sp"
            android:id="@+id/vote_add2_ok"
            android:background="@drawable/ok"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp"
            />
    </RelativeLayout>
</LinearLayout>